from pore2tree.main import main
from pore2tree._utils import exe_name
import sys


if __name__ == '__main__':
    desc = 'pore2tree is a pipeline allowing to use read data in combination with ' \
           'an OMA standalone output run to produce high quality trees. '
    main(sys.argv[1:], exe_name=exe_name(), desc=desc)
